<div class="navbar">
  <div class="navbar-inner">
    <%= link_to 'Pot of Gold', root_url, class: 'brand' %>
    <span class="brand">
      @<%= current_authorized_user.username %>
    </span>
    <ul class="nav">
      <% if current_authorized_user.class.name.include?("Advertiser") %>
        <li class="active"><%= link_to 'My Deals', deals_url %></li>
      <% else %>
        <li class="active"><%= link_to 'My Coupons', coupons_url %></li>
      <% end %>
      <li><%= link_to 'Sign Out', signout_url, method: :delete %></li>
    </ul>
  </div>
</div>