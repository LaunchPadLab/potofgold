<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-body">
    <h3 id="myModalLabel">Let's start a new deal</h3>
    <p><span class="pull-left">Select your background image</span>

    <%= s3_uploader_form post: images_url, as: "image[image_url]" do %>
      <%= file_field_tag :file, multiple: true %>
    <% end %>
    </p>

    <script id="template-upload" type="text/x-tmpl">
      <div class="upload">
        {%=o.name%}
        <div class="progress"><div class="bar" style="width: 0%"></div></div>
      </div>
    </script>

  </div>
</div>

<div class="deal_container hide">
	<div class="deal_inner">
    <h1><%= current_authorized_user.business_name %></h1>

    <%= form_for(@deal) do |f| %>
      <% if @deal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>
          <ul>
          <% @deal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.text_field :coupon_text, class: 'offer_text', placeholder: 'Enter offer text' %>
      </div>
      <div class="field">
        <%= f.text_area :description, rows: '6', class: 'deal_description', placeholder: 'Enter deal description' %>
      </div>
      <div class="field">
        <%= f.text_field :end_date, placeholder: 'Select an end date', class: 'deal_end_date' %>
      </div>
      <div class="field">
        <%= f.text_area :sample_tweet, rows: '6', class: 'deal_description', placeholder: 'Enter sample tweet' %>
      </div>
      <%= f.hidden_field :image_id %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
	</div>
</div>

<script>
  
  $(function(){
    
    $('#myModal').modal('show');
    
    $("#deal_end_date").datepicker({ dateFormat: 'yy-mm-dd', constrainInput: true, minDate: new Date() });

  });
  
</script>